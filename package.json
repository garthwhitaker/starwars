{
  "name": "starwars_garth_whitaker",
  "version": "0.0.0-development",
  "description": "Get star wars people ",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "istanbul cover -x *.test.js _mocha -- -R spec src/index.test.js",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test:watch": "mocha src/index.test.js -w",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/garthwhitaker/starwars.git"
  },
  "keywords": [
    "star",
    "wars",
    "people"
  ],
  "author": "Garth Whitaker <garth.whitaker@gmail.com> (http://garthwhitaker.co.za/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garthwhitaker/starwars/issues"
  },
  "homepage": "https://github.com/garthwhitaker/starwars#readme",
  "devDependencies": {
    "chai": "4.1.2",
    "codecov.io": "0.1.6",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "ghooks": "2.0.4",
    "istanbul": "0.4.5",
    "mocha": "5.2.0",
    "semantic-release": "^15.6.0",
    "travis-deploy-once": "^5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  }
}
